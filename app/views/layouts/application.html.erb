<!DOCTYPE html>
<html>
<head>
  <title>SecretAdmirerApp</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

  <div class="navbar">
    <div class="navbar-inner">
      <a class="brand" href='/'>SecretAdmirer</a>
      <ul class="nav pull-right">
        <%= render "shared/navbar" %>
      </ul>
    </div>
  </div>

  <% flash.each do |key, message| %>
  <p><%= "#{key.upcase}: #{message}" %></p>

  <% end %>

<%= yield %>



</body>
</html>
